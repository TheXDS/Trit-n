<Window 
    x:Class="WpfClient.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:WpfClient"
    xmlns:vm="clr-namespace:TheXDS.Triton.ViewModels"
    xmlns:vm2="clr-namespace:TheXDS.Triton.ViewModels;assembly=TritonUi"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance vm:MainWindowViewModel}"
    Title="MainWindow" Height="450" Width="600">
    <Window.Resources>
        <vm:TabPageBuilder x:Key="TabPageBuilder"/>
    </Window.Resources>
    <Grid>
        <TabControl ItemsSource="{Binding Converter={StaticResource TabPageBuilder}, Mode=OneWay}"/>
    </Grid>
</Window>
